{
  "name": "blocksense-fhe-oracle-contracts",
  "version": "0.1.0",
  "description": "FHE-based oracle contracts for prediction market settlement",
  "main": "index.js",
  "scripts": {
    "test": "hardhat test",
    "test:verbose": "hardhat test --verbose",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "node": "hardhat node",
    "gas-report": "REPORT_GAS=true hardhat test",
    "verify": "hardhat verify",
    "flatten": "hardhat flatten contracts/FHEOracle.sol > contracts/FHEOracle.flat.sol"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "oracle",
    "fhe",
    "prediction-market",
    "homomorphic-encryption"
  ],
  "author": "Blocksense",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/hardhat-upgrades": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "hardhat": "^2.18.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.4",
    "dotenv": "^16.3.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "ethers": "^6.8.0"
  }
